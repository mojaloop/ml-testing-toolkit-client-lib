{
  "name": "@mojaloop/ml-testing-toolkit-client-lib",
  "description": "Testing Toolkit Client Library",
  "version": "1.12.3",
  "license": "Apache-2.0",
  "author": "Vijaya Kumar Guthi, ModusBox Inc. ",
  "contributors": [
    "Georgi Logodazhki <georgi.logodazhki@modusbox.com>",
    "Sam Kummary <sam@modusbox.com>",
    "Steven Oderayi <steven.oderayi@modusbox.com>",
    "Vijay Kumar <vijaya.guthi@modusbox.com>",
    "Aaron Reynoza <aaron.reynoza@infitx.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mojaloop/ml-testing-toolkit-client-lib.git"
  },
  "bugs": "https://github.com/mojaloop/ml-testing-toolkit-client-lib/issues",
  "engines": {
    "node": ">=22.x"
  },
  "config": {},
  "bin": {
    "ml-ttk-cli": "bin/cli.js"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "test",
      "postman",
      "documents",
      "spec_files",
      "simulator"
    ]
  },
  "pre-commit": [
    "lint",
    "dep:check",
    "audit:check",
    "test"
  ],
  "scripts": {
    "start": "node src/index.js",
    "standard": "standard",
    "standard:fix": "standard --fix",
    "test": "npm run test:unit",
    "test:unit": "jest --testMatch '**/test/unit/**/*.test.js'",
    "test:int": "jest --reporters=default --reporters=jest-junit --testMatch '**/test/integration/**/*.test.js'",
    "test:coverage": "jest --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.js'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.test.js'",
    "test:junit": "jest --reporters=default --reporters=jest-junit --testMatch '**/test/unit/**/*.test.js'",
    "test:int1": "./test/integration-runner.sh ",
    "test:integration": "echo 'integration tests not defined'",
    "test:functional": "echo 'functional tests not defined'",
    "test:xunit": "npm run test:unit",
    "cover": "npx nyc --all report --reporter=lcov npm run test",
    "lint": "npm run standard",
    "lint:fix": "npm run standard:fix",
    "audit:fix": "npm audit fix",
    "generate-docs": "jsdoc -c jsdoc.json",
    "audit:check": "npx audit-ci --config ./audit-ci.jsonc",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "genexec": "pkg -t node8-win .",
    "cli": "node src/client.js",
    "release": "npx standard-version --no-verify --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
    "snapshot": "npx standard-version --no-verify --skip.changelog --prerelease snapshot --releaseCommitMessageFormat 'chore(snapshot): {{currentTag}}'"
  },
  "dependencies": {
    "@mojaloop/central-services-logger": "11.10.4",
    "@mojaloop/ml-testing-toolkit-shared-lib": "14.2.0",
    "@mojaloop/sdk-standard-components": "19.18.8",
    "@slack/webhook": "7.0.7",
    "atob": "2.1.2",
    "aws-sdk": "2.1693.0",
    "axios": "1.13.5",
    "cli-table3": "0.6.5",
    "commander": "14.0.3",
    "dotenv": "17.3.1",
    "fs": "0.0.1-security",
    "lodash": "4.17.23",
    "mv": "2.1.1",
    "node-dir": "0.1.17",
    "node-strings": "1.0.2",
    "parse-strings-in-object": "1.6.0",
    "path": "0.12.7",
    "rc": "1.2.8",
    "socket.io-client": "4.8.3"
  },
  "devDependencies": {
    "audit-ci": "7.1.0",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "npm-check-updates": "19.5.0",
    "nyc": "18.0.0",
    "parse-strings-in-object": "1.6.0",
    "pre-commit": "1.2.2",
    "replace": "1.2.2",
    "sinon": "21.0.1",
    "standard": "17.1.2",
    "standard-version": "9.5.0"
  },
  "overrides": {
    "form-data": "4.0.4",
    "on-headers": "1.1.0",
    "brace-expansion": "2.0.2",
    "shins": {
      "ajv": "6.12.3",
      "ejs": "3.1.10",
      "sanitize-html": "2.12.1",
      "markdown-it": "12.3.2",
      "express": "4.21.2"
    },
    "widdershins": {
      "ajv": "6.12.3",
      "swagger2openapi": "7.0.8",
      "markdown-it": "12.3.2"
    },
    "cross-spawn": "7.0.6",
    "tough-cookie": "4.1.3",
    "trim": "0.0.3",
    "yargs-parser": "21.1.1",
    "validator": "13.15.20",
    "minimatch@3.0.5": "3.1.5",
    "minimatch@3.1.2": "3.1.5",
    "minimatch@5.1.6": "5.1.7",
    "minimatch@9.0.5": "9.0.8",
    "replace": {
      "minimatch": "3.1.5"
    }
  },
  "generator-swaggerize": {
    "version": "4.1.0"
  },
  "pkg": {
    "scripts": "src/**/custom-functions/*.js",
    "options": [
      "experimental-modules"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
    }
  }
}
